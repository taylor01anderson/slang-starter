# Environment variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/audionft

# Frontend URL
CLIENT_URL=http://localhost:3000

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# IPFS Configuration
IPFS_PROJECT_ID=your_infura_ipfs_project_id
